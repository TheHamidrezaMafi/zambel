# Application Configuration
NODE_ENV=development
PORT=8080
# Backend URL for serving static assets (airline logos)
BACKEND_URL=http://localhost:8080

# PostgreSQL Database Configuration
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_password_here
POSTGRES_DATABASE=zambel_flights

# Scraper API Configuration
# URL of the Python FastAPI scraper service
SCRAPER_BASE_URL=http://localhost:5001
# Timeout for scraper requests in milliseconds
SCRAPER_TIMEOUT_MS=30000

# Flight Provider Configuration
# Comma-separated list of enabled providers
ENABLED_PROVIDERS=alibaba,safar366,mrbilit,safarmarket,pateh,flytoday

# Cache Configuration (Optional - for future implementation)
# TTL for flight search cache in seconds
FLIGHT_CACHE_TTL=300
# Redis connection URL
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_EXPIRATION=24h

# Logging
LOG_LEVEL=debug
