# Zambeel Environment Variables Example
# Copy this file to .env and configure your values

# ====================================
# Backend Configuration
# ====================================
NODE_ENV=production
PORT=8080

# Database Configuration (if using external DB)
# DB_HOST=localhost
# DB_PORT=5432
# DB_USERNAME=zambeel
# DB_PASSWORD=your_password
# DB_NAME=zambeel_db

# Redis Configuration (if using)
# REDIS_HOST=localhost
# REDIS_PORT=6379

# ====================================
# Frontend Configuration
# ====================================
NEXT_PUBLIC_API_URL=http://localhost:8080

# ====================================
# Scraper Configuration
# ====================================
PYTHONUNBUFFERED=1
# SCRAPER_TIMEOUT=30
# MAX_RETRIES=3

# ====================================
# Network Configuration
# ====================================
NETWORK_NAME=zambeel-network

# ====================================
# Port Mappings
# ====================================
FRONTEND_PORT=3000
BACKEND_PORT=8080
SCRAPER_PORT=5000
